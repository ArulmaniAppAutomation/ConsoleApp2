{
  "AppAutomationMenuItem": "Apps",
  "AppAutomationCaseName": "Windows10OfficeTest",
  "AppAutomationType": "Microsoft 365 apps for windows 10 and later",
  "Type": "AppAutomation",
  "Name": "Office365Regression",
  "Scenarios": [
    {
      "Name": "Go to App page and create Microsoft 365 apps for windows 10 and later",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.Apps.ByPlatform.WindowsUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "GoToMainPageAsync"
            },
            {
              "ControlType": "ClickAddButtonAsync"
            }
          ]
        }
      ]
    },
    {
      "Name": "Select app type",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.PopUp.SelectAppTypeUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "SelectAppTypeAsync",
              "Value": [ "Windows 10 and later", "Microsoft 365 Apps" ]
            }
          ]
        }
      ]
    },
    {
      "Name": "App information set app suite information",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.Apps.ByPlatform.WindowsUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "SetAppInformationNameAsync",
              "OperationValue": "25533660Generated from TestCaseName"
            },
            {
              "ControlType": "SetAppInformationDescriptionAsync",
              "OperationValue": "UI Automation testing"
            },
            {
              "ControlType": "SetAppInformationUrlAsync",
              "OperationValue": "https://www.microsoft.com/"
            },
            {
              "ControlType": "SetAppInformationPrivacyURLAsync",
              "OperationValue": "https://www.microsoft.com/"
            },
            {
              "ControlType": "SetAppInformationNotesAsync",
              "OperationValue": "Microsoft"
            },
            {
              "ControlType": "ClickNextButtonAsync"
            }
          ]
        }
      ]
    },
    {
      "Name": "Configure App suite",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.Apps.ByPlatform.WindowsUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "SelectOfficeAppsByExcludeAsync",
              "Value": [ "Access", "Outlook" ]
            },
            {
              "ControlType": "SelectOtherOfficeAppsAsync",
              "Value": [ "Project Online Desktop Client" ]
            }
          ]
        }
      ]
    },
    {
      "Name": "Configure App suite information ",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.Apps.ByPlatform.WindowsUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "SetArchitectureAsync",
              "OperationValue": "32-bit"
            },
            {
              "ControlType": "SetdefaultFileFormatAsync",
              "OperationValue": "Office Open Document Format"
            },
            {
              "ControlType": "SetUpdatechannelAsync",
              "OperationValue": "Monthly Enterprise Channel"
            },
            {
              "ControlType": "SetRemoveOtherVersionsAsync",
              "OperationValue": "Yes"
            }
          ]
        }
      ]
    },
    {
      "Name": "Configure app suite Properties",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.Apps.ByPlatform.WindowsUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "SetUseSharedComputerActivationAsync",
              "OperationValue": "Yes"
            },
            {
              "ControlType": "SetLanguagesAsync",
              "Value": [ "de-de", "zh-cn" ]
            },
            {
              "ControlType": "ClickNextButtonAsync"
            }
          ]
        }
      ]
    },
    {
      "Name": "App information set Assignments",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.Apps.ByPlatform.WindowsUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "InitAppAutomationAppAssignment"
            },
            {
              "ControlType": "ClickRequiredAddGroupAsync",
              "OperationValue": "Admin"
            },
            {
              "ControlType": "MarkAssignmentsCompleteAsync"
            },
            {
              "ControlType": "ClickNextButtonAsync"
            }
          ]
        }
      ]
    },
    {
      "Name": "App information Review and create",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.Apps.ByPlatform.WindowsUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "ClickCreateButtonWithoutWaitForUploadAsync"
            }
          ]
        }
      ]
    },
    {
      "Name": "App Verify",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.Apps.ByPlatform.WindowsUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "initAppAutomationVerifyResult"
            },
            {
              "ControlType": "VerifyPropertyAsync",
              "Value": [ "Name", "25533660Generated from TestCaseName" ]
            },
            {
              "ControlType": "VerifyPropertyAsync",
              "Value": [ "Description", "UI Automation testing" ]
            },
            {
              "ControlType": "VerifyPropertyAsync",
              "Value": [ "Information URL", "https://www.microsoft.com/" ]
            },
            {
              "ControlType": "VerifyPropertyAsync",
              "Value": [ "Privacy URL", "https://www.microsoft.com/" ]
            },
            {
              "ControlType": "VerifyPropertyAsync",
              "Value": [ "Notes", "Microsoft" ]
            },
            {
              "ControlType": "VerifyPropertyAsync",
              "Value": [ "Architecture", "32-bit" ]
            },
            {
              "ControlType": "VerifyPropertyAsync",
              "Value": [ "Default file format", "Office Open Document Format" ]
            },
            {
              "ControlType": "VerifyPropertyAsync",
              "Value": [ "Apps to be installed as part of the suite", "Access, Outlook, Project Online Desktop Client" ]
            },
            {
              "ControlType": "VerifyPropertyAsync",
              "Value": [ "Update channel", "Monthly Enterprise Channel" ]
            },
            {
              "ControlType": "VerifyPropertyAsync",
              "Value": [ "Remove other versions", "Yes" ]
            },
            {
              "ControlType": "VerifyPropertyAsync",
              "Value": [ "Use shared computer activation", "Yes" ]
            },
            // There are UI bugs now, will udpate this later
            //{
            //    "ControlType": "VerifyPropertyAsync",
            //    "Value": [ "Languages", "2 language(s) selected" ]
            //  },
            {
              "ControlType": "VerifyPropertyAssignmentsAsync",
              "Value": [ "Required", "Admin" ]
            },
            {
              "ControlType": "SuccessAppAutomationVerifyResult"
            }
          ]
        }
      ]
    },
    {
      "Name": "App update",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.Apps.ByPlatform.WindowsUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "ClickAppInformationEditButtonAsync"
            },
            {
              "ControlType": "SetAppInformationUrlAsync",
              "OperationValue": "https://www.windows.com/"
            },
            {
              "ControlType": "ClickReviewSaveButtonAsync"
            },
            {
              "ControlType": "ClickSaveButtonAsync"
            },
            {
              "ControlType": "SuccessAppAutomationAppUpdated"
            }
          ]
        }
      ]
    },
    {
      "Name": "App Verify",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.Apps.ByPlatform.WindowsUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "initAppAutomationVerifyResult"
            },
            {
              "ControlType": "VerifyPropertyAsync",
              "Value": [
                "Information URL",
                "https://www.windows.com"
              ]
            },
            {
              "ControlType": "VerifyDeviceInstallStatusAsync"
            },
            {
              "ControlType": "VerifyUserInstallStatusAsync"
            },
            {
              "ControlType": "VerifyMonitorAppInstallStatusAsync"
            },
            {
              "ControlType": "SuccessAppAutomationVerifyResult"
            }
          ]
        }
      ]
    },
    {
      "Name": "App delete",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.Apps.ByPlatform.WindowsUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "GoToMainPageAsync"
            },
            {
              "ControlType": "DeleteAppByNameAsync"
            }
          ]
        }
      ]
    }
  ]
        }