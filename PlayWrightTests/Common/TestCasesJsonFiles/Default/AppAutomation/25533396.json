{
  "AppAutomationMenuItem": "Apps",
  "AppAutomationCaseName": "LobAppTest",
  "AppAutomationType": "iOSLob",
  "Type": "AppAutomation",
  "Name": "LobIpaRegression",
  "Scenarios": [
    {
      "Name": "select app type",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.Apps.ByPlatform.AllAppsUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "GoToMainPageAsync"
            },
            {
              "ControlType": "ClickAddButtonAsync"
            }
          ]
        }
      ]
    },
    {
      "Name": "Select app type",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.PopUp.SelectAppTypeUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "SelectAppTypeAsync",
              "Value": [ "Line-of-business app", "Other" ]
            }
          ]
        }
      ]
    },
    {
      "Name": "select App package",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.Apps.ByPlatform.AllAppsUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "ClickSelectAppPackageFileButtonAsync"
            }
          ]
        }
      ]
    },
    {
      "Name": "App information select app package file",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.PopUp.UploadFileUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "UploadFile",
              "OperationValue": "AppAutomation\\VersionOne\\MS Ads BetaProd.ipa"
            },
            {
              "ControlType": "ClickOKButtonAsync"
            }
          ]
        }
      ]
    },
    {
      "Name": "Set App information",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.Apps.ByPlatform.AllAppsUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "SetAppInformationNameAsync",
              "OperationValue": "25533396LobIpaRegression"
            },
            {
              "ControlType": "SetAppInformationDescriptionAsync",
              "OperationValue": "UI Automation testing"
            },
            {
              "ControlType": "SetAppInformationPublisherAsync",
              "OperationValue": "AppLifeEx"
            },
            {
              "ControlType": "SetMinimumOperationSystemAsync",
              "Value": [ "iOS 8.0" ]
            },
            {
              "ControlType": "SetAppInformationUrlAsync",
              "OperationValue": "https://www.windows.com"
            },
            {
              "ControlType": "ClickNextButtonAsync"
            }
          ]
        }
      ]
    },
    {
      "Name": "Set App Assignments",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.Apps.ByPlatform.AllAppsUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "ClickAvailableForEnrolledDevicesAllUsersAsync"
            },
            {
              "ControlType": "ClickAvailableForEnrolledDevicesBehaveUninstallOnDeviceRemovalCellAsync",
              "OperationValue": "All users"
            },
            {
              "ControlType": "SetUninstallOnDeviceRemovalAsync",
              "OperationValue": "Yes"
            },
            {
              "ControlType": "ClickAvailableForEnrolledDevicesAddGroupAsync",
              "OperationValue": "Admin"
            },
            {
              "ControlType": "ClickAvailableForEnrolledDevicesBehaveUninstallOnDeviceRemovalCellAsync",
              "OperationValue": "Admin"
            },
            {
              "ControlType": "SetUninstallOnDeviceRemovalAsync",
              "OperationValue": "No"
            },
            {
              "ControlType": "ClickAvailableForEnrolledDevicesAddGroupAsync",
              "OperationValue": "Iwuser1"
            },
            {
              "ControlType": "ClickAvailableForEnrolledDevicesBehaveUninstallOnDeviceRemovalCellAsync",
              "OperationValue": "Iwuser1"
            },
            {
              "ControlType": "SetUninstallOnDeviceRemovalAsync",
              "OperationValue": "Yes"
            },
            {
              "ControlType": "ClickNextButtonAsync"
            },
            {
              "ControlType": "ClickCreateButtonAsync"
            }
          ]
        }
      ]
    },
    {
      "Name": "App Verify",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.Apps.ByPlatform.AllAppsUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "initAppAutomationVerifyResult"
            },
            {
              "ControlType": "VerifyPropertyAsync",
              "Value": [ "Name", "25533396LobIpaRegression" ]
            },
            {
              "ControlType": "VerifyPropertyAsync",
              "Value": [ "Publisher", "AppLifeEx" ]
            },
            {
              "ControlType": "VerifyPropertyAsync",
              "Value": [ "Minimum operating system", "iOS 8.0" ]
            },
            {
              "ControlType": "VerifyPropertyAsync",
              "Value": [
                "Information URL",
                "https://www.windows.com"
              ]
            },
            {
              "ControlType": "VerifyPropertyAssignmentsGridDataCellAsync",
              "Value": [ "Available for enrolled devices", "All users", "Uninstall on device removal", "Yes" ]
            },
            {
              "ControlType": "VerifyPropertyAssignmentsGridDataCellAsync",
              "Value": [ "Available for enrolled devices", "Admin", "Uninstall on device removal", "No" ]
            },
            {
              "ControlType": "VerifyPropertyAssignmentsGridDataCellAsync",
              "Value": [ "Available for enrolled devices", "Iwuser1", "Uninstall on device removal", "Yes" ]
            },
            {
              "ControlType": "VerifyDeviceInstallStatusAsync"
            },
            {
              "ControlType": "VerifyUserInstallStatusAsync"
            },
            {
              "ControlType": "VerifyMonitorAppInstallStatusAsync"
            },
            {
              "ControlType": "SuccessAppAutomationVerifyResult"
            }
          ]
        }
      ]
    },
    {
      "Name": "App delete",
      "UtilsName": "PlaywrightTests.Common.Utils.BaseUtils.Apps.ByPlatform.AllAppsUtils",
      "Steps": [
        {
          "Preparation": [
            {
              "ControlType": "GoToMainPageAsync"
            },
            {
              "ControlType": "DeleteAppByNameAsync"
            }
          ]
        }
      ]
    }
  ]
}
